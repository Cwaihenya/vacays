<p id="notice"><%= notice %></p>
<h1> Property List </h1>
<p>
  <strong>Property Name:</strong>
  <%= @place.property_name %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @place.rent %>
</p>

<p>
  <strong>Address:</strong>
  <%= @place.address %>
</p>

<p>
  <strong>Building Age:</strong>
  <%= @place.building_age %>
</p>

<p>
  <strong>Remarks:</strong>
  <%= @place.remarks %>
</p>

<h2>Nearest Railway Line <% @station %></h2>
<% for station in @place.stations %>
   <ul>
     <li><%= station.name_of_railway_line %></li>
     <li><%= station.station_name %></li>
     <li><%= station.how_many_mins_walk %></li>
 </ul>
 <% end %>

<%= link_to 'Edit', edit_place_path(@place) %> |
<%= link_to 'Add Station', place_stations_path(@place) %> |
<%= link_to 'Back', places_path %>
