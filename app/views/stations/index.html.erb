<p id="notice"><%= notice %></p>

<h1>Stations</h1>

<table>
  <thead>
    <tr>
      <th>Name of railway line</th>
      <th>Station name</th>
      <th>How many mins walk</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.name_of_railway_line %></td>
        <td><%= station.station_name %></td>
        <td><%= station.how_many_mins_walk %></td>
        <td><%= station.place.property_name %></td>
        <td><%= link_to 'Show Place', [@place] %></td>
        <td><%= link_to 'Edit Station', edit_place_station_url(@place, station) %></td>
        <td><%= link_to 'Destroy Station', [@place, station], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Station', new_place_station_path(@place) %>
